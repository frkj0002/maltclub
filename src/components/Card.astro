---
const { url = "#", cardimage = "", cardimagealt = "", navn = "", antal = "", pris = "" } = Astro.props;
import Link from "./Link.astro";
import Button from "./Button.astro";
---

<article class="@container border-small border-colors-blue-400">
	<a href="#" class="flex flex-col justify-between">
		<section class="pt-sm mx-auto">
			<h3 class="text-center">{navn}</h3>
			<p class="text-center"><span>{antal}</span><span> øl om måneden</span></p>
			<p class="text-center"><span>{pris}</span><span> kr.</span></p>
			<Button variant="primary" size="small">Abonnér</Button>
		</section>
		<section>
			<img src={cardimage} alt={cardimagealt} class="object-cover w-[378px] h-full" />
		</section>
	</a>
</article>
