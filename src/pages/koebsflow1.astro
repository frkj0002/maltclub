---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Form from "../components/Form.astro";
import { Image } from "astro:assets";
import Line from "../components/Line.astro";
import pcHvid from "../assets/images/pc_hvid.png";
import pil from "../assets/images/back.svg";
import pcHvid from "../assets/images/pc_hvid.svg";
---

<MainLayout>
	<!-- Kontaktoplysninger og levering -->
	<section class="bg-colors-green-500 grid gap-y-xs pt-5xl px-sm md:px-7xl pb-5xl">
		<div class="grid justify-center">
			<Image src={pcHvid} alt="stregtegning af en pc, der bestiller abonnement" />
		</div>
		<a href="/singleview"><Image src={pil} alt="pil tilbage" /></a>
		<h2 class="text-colors-blue-500 py-s">Kontaktoplysninger og levering</h2>
		<Form titel="E-mail" name="email" />
		<form class="pb-sm" name="sendemails" data-netlify="true">
			<input type="checkbox" id="sendEmails" name="sendEmails" value="sendEmails" class="appearance-none rounded-none bg-colors-green-50" />
			<label for="privatlivspolitik" class="font-sans font-medium text-paragraphmobile md:text-paragraph text-colors-blue-500">Send mig e-mails med nyheder og tilbud</label>
			<p class="text-colors-blue-500">Har du allerede en bruger, så log ind <a href="#" class="underline">her</a></p>
		</form>
		<div class="grid md:grid-cols-2 gap-xs">
			<Form titel="Fornavn" name="fornavn" />
			<Form titel="Efternavn" name="efternavn" />
		</div>
		<Form titel="Firma (valgfri)" name="firma" />
		<Form titel="Adresse" name="adresse" variant="primary" class="relative">
			<span class="absolute inset-y-0 right-0 flex items-center px-3">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" class="">
					<path d="M19.6 21L13.3 14.7C12.8 15.1 12.225 15.4167 11.575 15.65C10.925 15.8833 10.2333 16 9.5 16C7.68333 16 6.146 15.3707 4.888 14.112C3.63 12.8533 3.00067 11.316 3 9.5C2.99933 7.684 3.62867 6.14667 4.888 4.888C6.14733 3.62933 7.68467 3 9.5 3C11.3153 3 12.853 3.62933 14.113 4.888C15.373 6.14667 16.002 7.684 16 9.5C16 10.2333 15.8833 10.925 15.65 11.575C15.4167 12.225 15.1 12.8 14.7 13.3L21 19.6L19.6 21ZM9.5 14C10.75 14 11.8127 13.5627 12.688 12.688C13.5633 11.8133 14.0007 10.7507 14 9.5C13.9993 8.24933 13.562 7.187 12.688 6.313C11.814 5.439 10.7513 5.00133 9.5 5C8.24867 4.99867 7.18633 5.43633 6.313 6.313C5.43967 7.18967 5.002 8.252 5 9.5C4.998 10.748 5.43567 11.8107 6.313 12.688C7.19033 13.5653 8.25267 14.0027 9.5 14Z" fill="bg-colors-yellow-500"></path>
				</svg>
			</span>
		</Form>
		<Form titel="Lejlihed, etage osv. (valgfri)" name="lejlighed" />
		<div class="grid md:grid-cols-2 gap-xs">
			<Form titel="Postnummer" name="postnummer" />
			<Form titel="By" name="by" />
		</div>
		<Form titel="Telefon" name="telefon" />
		<div class="">
			<input type="checkbox" id="sendEmails" name="sendEmails" value="sendEmails" class="appearance-none rounded-none bg-colors-green-50" />
			<label for="privatlivspolitik" class="font-sans font-medium text-paragraphmobile md:text-paragraph text-colors-blue-500">Send mig e-mails med nyheder og tilbud</label>
			<p class="text-colors-blue-500">Gem denne information for hurtigere udtjekning næste gang</p>
		</div>
		<div class="md:flex justify-center md:justify-end grid pt-xs">
			<div class="">
				<a href="/koebsflow2"><Button variant="tertiary" size="long">Næste<span class="opacity-0 md:hidden">e</span></Button></a>
			</div>
			<!-- <div>
				<a href="/singleview"><Button variant="paymentBack" size="long" class="">tilbage</Button></a>
			</div> -->
		</div>
	</section>
</MainLayout>
