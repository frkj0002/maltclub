---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import Smagsglimt from "../components/Smagsglimt.astro";
import Link from "../components/Link.astro";
import Accordion from "../components/Accordion.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
	<article>
		<h1>Index overskrift</h1>
		<Button variant="primary" size="small">Klik!</Button>
		<Button variant="primary" size="large">Klik!</Button>
		<Button variant="secondary" size="small">Klik!</Button>
		<Button variant="secondary" size="large">Klik!</Button>
		<Button variant="tertiary" size="small">Klik!</Button>
		<Button variant="tertiary" size="large">Klik!</Button>
		<p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p>
		<Image src={thumbsup} alt="" />

		<!-- Abonnement sektion -->
		<section class="text-center">
			<h2 class="text-center">Abonnementer</h2>
			<article class="md:grid grid-cols-4 mx-auto px-xxs">
				<Card cardimage="/beer_presentation_podium.png" navn="Maltclub XL" antal="9-11" pris="465" />
				<Card cardimage="/beer_presentation_podium.png" navn="Maltclub" antal="5-6" pris="275" />
				<Card cardimage="/beer_presentation_podium.png" navn="Maltclub uden IPA" antal="5-6" pris="275" />
				<Card cardimage="/beer_presentation_podium.png" navn="Gaveabonnement" antal="5-6" pris="275" />
			</article>
			<Button variant="primary" size="small">Gå til abonnementoversigt</Button>
		</section>

		<!-- Tidligere kasser -->
		<section class="text-center px-s">
			<h2>Smagsglimt fra tidligere kasser</h2>

			<article class="md:grid md:grid-cols-5">
				<Smagsglimt cardimage="/daase_placeholder.png" navn="MIKELLER XMAS CLASSIC" type=" VIENNA LAGER" land=" Danmark" alkoholprocent=" 5,6%" beskrivelse="Xmas Classic er Mikkellers hyldest til den mest almindelige øltype i Danmark - Vienna Lager. En skøn let humlet pilsner som er let drikkelig." />
				<Smagsglimt cardimage="/daase_placeholder.png" navn="MIKELLER XMAS CLASSIC" type=" VIENNA LAGER" land=" Danmark" alkoholprocent=" 5,6%" beskrivelse="Xmas Classic er Mikkellers hyldest til den mest almindelige øltype i Danmark - Vienna Lager. En skøn let humlet pilsner som er let drikkelig." />
				<Smagsglimt cardimage="/daase_placeholder.png" navn="MIKELLER XMAS CLASSIC" type=" VIENNA LAGER" land=" Danmark" alkoholprocent=" 5,6%" beskrivelse="Xmas Classic er Mikkellers hyldest til den mest almindelige øltype i Danmark - Vienna Lager. En skøn let humlet pilsner som er let drikkelig." />
				<Smagsglimt cardimage="/daase_placeholder.png" navn="MIKELLER XMAS CLASSIC" type=" VIENNA LAGER" land=" Danmark" alkoholprocent=" 5,6%" beskrivelse="Xmas Classic er Mikkellers hyldest til den mest almindelige øltype i Danmark - Vienna Lager. En skøn let humlet pilsner som er let drikkelig." />
				<Smagsglimt cardimage="/daase_placeholder.png" navn="MIKELLER XMAS CLASSIC" type=" VIENNA LAGER" land=" Danmark" alkoholprocent=" 5,6%" beskrivelse="Xmas Classic er Mikkellers hyldest til den mest almindelige øltype i Danmark - Vienna Lager. En skøn let humlet pilsner som er let drikkelig." />
			</article>
		</section>
	</article>

	<Accordion titel="Hvordan bestiller jeg et maltclub abonnement?" indhold=" Du bestiller et MaltClub abonnement lige her" />
</MainLayout>
