---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
	<article>
		<h1>Index overskrift</h1>
		<Button variant="primary" size="small">Klik!</Button>
		<Button variant="primary" size="large">Klik!</Button>
		<Button variant="secondary" size="small">Klik!</Button>
		<Button variant="secondary" size="large">Klik!</Button>
		<Button variant="tertiary" size="small">Klik!</Button>
		<Button variant="tertiary" size="large">Klik!</Button>
		<p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p>
		<Image src={thumbsup} alt="" />
		<div class="grid grid-cols-4">
		<Card cardimage="/beer_presentation_podium.png" navn="Maltclub XL" antal="9-11" pris="465" />
		</div>
	</article>
</MainLayout>
